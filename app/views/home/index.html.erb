<% content_for :title, "Portfolio" %>
  <h1 class="text-center mb-4">Welcome <%=current_user.email%></h1>

  <%= form_with(url: posts_path, method: :get, class: "mb-4") do |form| %>
    <div class="input-group">
      <%= form.text_field :search, placeholder: "Search for posts", class: "form-control" %>
      <button type="submit" class="btn btn-primary">Search</button>
    </div>
  <% end %>

  
  <div class="text-center mt-4">
    <%= link_to "Catch up with all the posts", posts_path, class: "btn btn-success" %>
  </div>
</div>
