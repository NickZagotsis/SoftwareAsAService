<h1 class="text-center mb-4">Create a New Room</h1>

<%= form_with model: @room, local: true do |f| %>
  <div class="form-group mb-3">
    <%= f.text_field :name, required: true, placeholder: "Enter room name", class: "form-control" %>
  </div>
  <div class="text-center">
    <%= f.submit "Create", class: "btn btn-primary btn-lg" %>
  </div>
<% end %>
