<div class="container mt-5">
  <h2>Your Private Chats</h2>
  <% if @rooms.any? %>
    <ul class="list-group">
      <% @rooms.each do |room| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <%= link_to room.name, room_path(room), class: "text-decoration-none" %>
          <span class="badge bg-primary">Private Chat</span>
        </li>
      <% end %>
    </ul>
  <% else %>
    <div class="alert alert-info mt-3">
      You don't have any private chats yet.
    </div>
  <% end %>
</div>
