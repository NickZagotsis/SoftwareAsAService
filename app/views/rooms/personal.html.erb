<div class="container mt-5">
  <h2 class="text-center text-dark mb-4 font-weight-bold">Your Private Chats</h2>
  
  <% if @rooms.any? %>
    <ul class="list-group">
      <% @rooms.each do |room| %>
        <li class="list-group-item d-flex justify-content-between align-items-center p-3 shadow-sm mb-3 rounded-3 border-light">
          <%= link_to room.name, room_path(room), class: "text-decoration-none text-dark font-weight-bold h5" %>
          <span class="badge bg-primary rounded-pill text-white px-3 py-2">Private Chat</span>
        </li>
      <% end %>
    </ul>
  <% else %>
    <div class="alert alert-info mt-3 rounded-3 shadow-sm">
      <strong>Oh no!</strong> You don't have any private chats yet.
    </div>
  <% end %>
</div>

<!-- Custom CSS for hover effect -->
<style>
  .list-group-item:hover {
    transform: translateY(-3px);
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
  }

  .rounded-3 {
    border-radius: 1rem !important;
  }
</style>
