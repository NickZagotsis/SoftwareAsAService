<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-lg rounded-3">
        <div class="card-header bg-primary text-white text-center p-4">
          <h1 class="font-weight-bold">Public Rooms</h1>
        </div>
        <div class="card-body">
          <!-- Button to create a new room -->
          <div class="text-center mb-4">
            <%= link_to "Create a New Room", new_room_path, class: "btn btn-success btn-lg rounded-pill shadow-sm hover-effect" %>
          </div>

          <!-- List of rooms -->
          <ul class="list-group">
            <% @rooms.each do |room| %>
              <li class="list-group-item d-flex justify-content-between align-items-center p-3 shadow-sm mb-3 rounded-3 border-light hover-effect">
                <span class="font-weight-bold h5 text-dark"><%= room.name %></span>
                <%= link_to "Join", room_path(room), class: "badge bg-primary text-decoration-none text-white rounded-pill px-3 py-2" %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Custom CSS for hover effect -->
<style>
  .hover-effect:hover {
    transform: translateY(-3px);
    box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.15);
  }

  .rounded-3 {
    border-radius: 1rem !important;
  }

  .text-center h1 {
    font-size: 2.5rem;
  }
</style>
