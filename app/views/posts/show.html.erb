<div class="container py-5">
  <div class="card shadow-lg" style="border-radius: 15px;">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center" style="border-radius: 15px 15px 0 0;">
      <h1 class="mb-0">
        <%= @post.title %> 
        <small class="text-light" style="font-size: 0.4em;">by <%= @post.user.email %></small>
      </h1>
      <% if @post.user == current_user %>
      <div class="d-flex gap-2">
        <%= link_to "Edit this Post", edit_post_path(@post), class: "btn btn-warning btn-sm" %>
        <%= button_to "Delete", @post, method: :delete, class: "btn btn-danger btn-sm", data: { confirm: "Are you sure you want to delete this post?" } %>
      </div>
    <% end %>
    </div>
    <div class="card-body text-center">
      <p class="text-muted"><strong>Category:</strong> <%= @post.category %></p>
      <p><%= @post.post %></p>
      <div class="mt-4">
        <%= link_to "Back to Posts", posts_path, class: "btn btn-secondary me-2" %>
      </div>
    </div>
  </div>
</div>
