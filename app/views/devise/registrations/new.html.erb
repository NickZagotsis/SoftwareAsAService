 <div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card p-4" style="max-width: 500px; width: 100%;text-align:center;">

<h2>Sign up</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email", class:"form-control" %>
  </div>
<br>
  <div class="field">
    <%= f.password_field :password, autocomplete: "new-password",placeholder:"Password",class:"form-control"%>
  </div>

<br>
  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"Password confirmation",class:"form-control" %>
  </div>
  <br>
  <div class="field">
  <%= f.text_area :description, placeholder: "Describe yourself", rows: 3,class:"form-control"%>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "Sign up", class:"btn btn-primary" %>
    <%= render "devise/shared/links" %>
  </div>
  <br>
<%=link_to 'Back', new_user_session_path, class:"btn btn-secondary"%>
<% end %>
</div>
</div>