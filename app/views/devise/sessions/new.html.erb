<div class="container d-flex justify-content-center align-items-center vh-100">
  <div class="card p-4" style="max-width: 400px; width: 100%;">
    <h2 class="text-center mb-4">Log in</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-3">
        <%= f.email_field :email, placeholder: "Email", autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
      
      <div class="mb-3">
        <%= f.password_field :password, placeholder: "Password", autocomplete: "current-password", class: "form-control" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-check mb-3">
          <%= f.check_box :remember_me, class: "form-check-input" %>
          <%= f.label :remember_me, class: "form-check-label" %>
        </div>
      <% end %>

      <div class="d-flex justify-content-between mb-3">
        <%= f.submit "Log in", class: "btn btn-success me-2" %>
        <%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-primary" %>
      </div>

      <div class="text-center">
        <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-decoration-none" %>
      </div>
    <% end %>
  </div>
</div>
